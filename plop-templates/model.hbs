const { Schema, model } = require('mongoose')
const base = require('./base')
const {{name}}Schema = Schema({
  ...base,
  slug: {
    type: String,
    default: null
  },
  title: {
    type: String,
    required: true
  },
  description: {
    type: String,
    required: true
  },
  tagList: {
    type: [String]
  },
  body: {
    type: String,
    required: true
  },
  favorited: {
    type: Boolean,
    default: null
  },
  favoritesCount: {
    type: Number,
    default: 0
  }
})

const {{properCase name}} = model('{{properCase name}}', {{name}}Schema)

module.exports = {{properCase name}}
