const express = require('express')
const router = express.Router()
const vdt = require('../validator/{{name}}')
const ctr = require('../controller/{{name}}')

// 获取文章列表
router.get('/{{name}}s', ctr.get{{properCase name}}s)

// 获取文章详情
router.get('/{{name}}s/:id', vdt.get{{properCase name}}, ctr.get{{properCase name}})

// 创建文章
router.post('/{{name}}s', vdt.add{{properCase name}}, ctr.add{{properCase name}})

// 更新文章
router.put('/{{name}}s/:id', vdt.update{{properCase name}}, ctr.update{{properCase name}})

// 删除文章
router.delete('/{{name}}s/:id', vdt.del{{properCase name}}, ctr.del{{properCase name}})

module.exports = router
